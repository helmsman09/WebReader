{
  "name": "news-reading-monorepo",
  "private": true,
  "workspaces": [
    "backend",
    "dashboard",
    "mobile",
    "types",
    "extension"
  ],
  "scripts": {
    "build:types": "npm run build -w @news-capture/types",
    "build:backend": "npm run build -w @news-capture/backend",
    "build:dashboard": "npm run build -w @news-capture/dashboard",
    "build:extension": "npm run build -w @news-capture/extension",

    "build": "npm run build:types && npm run build:backend && npm run build:dashboard && npm run build:extension",

    "typecheck": "npm run typecheck --workspaces"
  },
  "dependencies": {
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "overrides": {
    "react": "19.2.0",
    "react-dom": "19.2.0"
  }
}